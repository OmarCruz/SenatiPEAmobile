<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".actLogin"
android:orientation="vertical"
android:gravity="center_horizontal"
android:id="@+id/layLogin"
android:weightSum="1">

<ImageView
    android:layout_width="219dp"
    android:layout_height="wrap_content"
    android:id="@+id/imgLogo"
    android:src="@drawable/logo"
    android:padding="20dp"
    android:contentDescription="@string/logo_senati"
    android:layout_weight="0.14" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/login_contraseña"
    android:id="@+id/textView"
    android:layout_weight="0.15" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:id="@+id/txtUsuario"
    android:layout_gravity="center_horizontal"
    android:hint="@string/hint_usuario"
    android:padding="10dp"/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:id="@+id/txtContraseña"
    android:layout_gravity="center_horizontal"
    android:hint="@string/hint_contraseña"
    android:padding="10dp"/>

<Button
    android:layout_width="@dimen/anchoBotones"
    android:layout_height="wrap_content"
    android:text="@string/btn_Ingresar"
    android:id="@+id/btnIngresar"
    android:layout_gravity="center_horizontal" />

</LinearLayout>
